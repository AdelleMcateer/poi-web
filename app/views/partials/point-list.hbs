<div class="uk-margin uk-width-3xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <table class="uk-table">
        <caption>
            Points of interest to Date
        </caption>
        <thead>
        <th>Island Name</th>
        <th>Description</th>
        <th>Contributor</th>
        <th>Category</th>
        <th>Image</th>
        <th>Update</th>
        <th>Delete</th>
        </thead>
        <tbody class="uk-text-left">
        {{#each point}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{contributor.firstName}} {{contributor.lastName}}</td>
                <td> {{category.category}} </td>

                <td><img class="ui large image" src="{{image}}"></td>
                <td>
                    <a href="/updatepoint/{{_id}}"><button class="submit uk-button uk-button-primary uk-button-small uk-width-1-1">Update</button></a>
                </td>
                <td>
                    <a href="/deletepoint/{{_id}}"><button class="submit uk-button uk-button-primary uk-button-small uk-width--1">Delete</button></a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>